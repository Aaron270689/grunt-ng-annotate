{
    "extends": "mzgol",

    "root": true,

    "env": {
        "node": true
    },

    "rules": {
        // Rules are divided into sections from http://eslint.org/docs/rules/

        // TODO remove all these
        "max-len": [1, 100, 4],
        "func-style": 0,

        // ECMAScript 6
        // TODO port to ES6 and enable most of it
        "no-var": 0,
        "object-shorthand": 0,
        "prefer-arrow-callback": 0,
        "prefer-const": 0,
        "prefer-spread": 0,
        "prefer-reflect": 0, // TODO enable when Node supports it
        "prefer-template": 0
    }
}
